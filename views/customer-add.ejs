<% layout('base') -%>
<div class="panel">
    <h2>Add Customer<h2>
    <% if(message.error) { %>
        <div class="alert alert-danger"><%= message.error %></div>
    <% } %>
    <div class="panel panel-default">
        <div class="form-panel">
            <form action="/customer-add" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Name" name="name" required="true" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Address" name="address" required="true" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="City" name="city" required="true" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control phone_with_ddd" placeholder="Phone" name="phone" required="true" autofocus>
                </div>                
                <a href="/customers" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back</a>
                <button type="submit" class="btn btn-primary"><i class="fa fa-hdd-o"></i> Save</button><br>
            </form>
        </div>
    </div>
</div>