<% layout('base-login') -%>
<div class="panel">
    <div class="panel-body box-login">
        <h3 class="title-login">Sign Up</h3>
        <% if(message.error) { %>
            <div class="alert alert-danger"><%= message.error %></div>
        <% } %>
        <div class="form-panel">
            <form action="/register" method="POST">
                <div class="form-group">
                    <i class="fa fa-user-circle"></i>
                    <input type="text" class="form-control input-login" placeholder="Name" name="name" required="true" autofocus>
                </div>
                <div class="form-group">
                    <i class="fa fa-envelope"></i>
                    <input type="text" class="form-control input-login" placeholder="Email" name="email" required="true" autofocus>
                </div>
                <div class="form-group">
                    <i class="fa fa-user"></i>
                    <input type="text" class="form-control input-login" placeholder="Username" name="username" required="true" autofocus>
                </div>
                <div class="form-group">
                    <i class="fa fa-lock"></i>
                    <input type="text" class="form-control input-login" placeholder="Password" name="password" required="true" autofocus>
                </div>
                <a href="/" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back</a>
                <button type="submit" class="btn btn-primary"><i class="fa fa-hdd-o"></i> Register</button><br>
            </form>
        </div>
    </div>
</div>
